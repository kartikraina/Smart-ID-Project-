<h1> Listing all Faculties</h1>
<p>
<%= link_to "HOME", root_path%> &nbsp;&nbsp;| &nbsp;&nbsp;<%= link_to "Sign up for faculty", new_faculty_path%>
</p>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Specialization</th>
    <th>Designation</th>
    <th>E-Mail</th>
    <th>Contact</th>
  </tr>

  <% @faculties.each do |f| %>
  <tr>
    <td><%= f.firstname%></td>
    <td><%= f.lastname%></td>
    <td><%= f.teaching_field%></td>
    <td><%= f.designation%></td>
    <td><%= f.email%></td>
    <td><%= f.contact%></td>
    <td><%= link_to "Edit", edit_faculty_path(f)%>
    <td><%= link_to "Show", faculty_path(f)%>
    <td><%= link_to "Delete", faculty_path(f), method: :delete, data: {confirm: "Are you sure?"}%></td>
  </tr>
  <% end %>
</table>
