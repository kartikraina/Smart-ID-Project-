<h1 align="center">Faculty Listings</h1>
<table class="table">
  <thead>
  <tr>
    <th scope="col"> </th>
    <th scope="col">Name</th>
  </tr>
  </thead>
  <tbody>
  <% @faculties.each do |f| %>
  <tr>
    <td><%= link_to (gravatar_for f), faculty_path(f)%></td>
    <td><%= link_to (f.firstname+" "+f.lastname), faculty_path(f)%></td>
    <% if faculty_logged_in? && current_faculty==f%>
    <td><%= link_to "Edit", edit_faculty_path(f), class: "btn btn-primary"%>
    <% end %>
  </tr>
  <% end %>
  </tbody>
</table>
