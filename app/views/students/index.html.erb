<h1 align="center">All Students registered for Smart-ID</h1>
<% if logged_in? %>
<div class="hd">
<%= link_to 'Smart-ID(Student)', user_path %>
</div>
<% else %>
<div class="hd">
<%= link_to 'Register for Smart-ID', new_student_path, class: "hd" %> | <%= link_to 'Smart-ID(Student)', user_path %>
</div>
<% end %>
<table class="table">
  <thead>
  <tr>
    <th scope="col"> </th>
    <th scope="col">Enrollment Number</th>
    <th scope="col">First Name</th>
    <th scope="col">Last Name</th>
    <th scope="col">Branch</th>
    <th scope="col">Batch</th>
    <th scope="col">Contact</th>
  </tr>
  </thead>
  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= gravatar_for student, size: 100 %></td>
      <td><%=student.enrollnumber.to_s.rjust(11,'0')%></td>
      <td><%=student.firstname%></td>
      <td><%=student.lastname%></td>
      <td><%=student.branch%></td>
      <td><%=student.batch%></td>
      <td><%=student.contact%></td>
            <td><%=link_to 'Show', student_path(student), class: "btn btn-primary"%></td>
      <% if logged_in? && current_student.enrollnumber == student.enrollnumber%>
        <td><%=link_to 'Edit', edit_student_path(student), class: "btn btn-secondary"%></td>
        <td><%=link_to 'Delete', student_path(student), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"%></td>
      <% end %>  
    </tr>
  <% end %>
  </tbody>
</table>

