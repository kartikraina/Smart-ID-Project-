<h1 align="center">
  <%= @student.firstname+" "+@student.lastname%>'s Profile
</h1>
<div class="container">
  <h2 align="center"><%= gravatar_for @student , size: 150%></h2> 
  <b><p align='center'><%= @student.enrollnumber%></p></b>
  <div align="center">
    <p>NAME: <%= @student.firstname+" "+@student.lastname%></p>
    <p>Branch: <%= @student.branch%></p>
    <p>Batch: <%= @student.batch%></p>
    <p>Contact: <%= @student.contact%></p>

    <% if admin_logged_in?%>
    <%= link_to "Delete", student_path(@student), method: :delete, data: {confirm: "Are you sure?"},class: "btn btn-danger", align: "center"  %> 
    <%= link_to "Edit", edit_student_path(@student), class: "btn btn-secondary" %>
    <% end %>
    <br/>
    <br/>
    <%= link_to "Students", students_path, class: "btn btn-primary", align: "center"%>
  </div>
</div>