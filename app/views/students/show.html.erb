<h1>Student Profile</h1>
<table>
  <tr>
    <th>Enrollment Number</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Branch</th>
    <th>Batch</th>
    <th>Contact</th>
  </tr>
  <tr>
    <td><%= gravatar_for @student, size: 100 %></td>
    <td><%=@student.enrollnumber.to_s.rjust(11,'0')%></td>
    <td><%=@student.firstname%></td>
    <td><%=@student.lastname%></td>
    <td><%=@student.branch%></td>
    <td><%=@student.batch%></td>
    <td><%=@student.contact%></td>
    <% if logged_in? && current_student.enrollnumber == @student.enrollnumber%>
      <td><%= link_to 'Update your Profile', edit_student_path(@student)%></td>
      <td><%= link_to 'Delete your Profile', student_path(@student), method: :delete, data: {confirm: "Are your sure?"}%></td>
    <%  end %>
    <td><%= link_to 'Student Portal', students_path %></td>
  </tr>
</table>
