<h1 align = "center">Registration for Issue of Smart-ID</h1>
<% if @id.errors.any?%>

    <div class= "alert alert-danger", role= "alert">
        <h2 class= "alert-heading">
          <%= pluralize(@id.errors.count, "error") %>
          prevented action from getting completed
          </h2>
<ul>
  <%@id.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
  <% end %>
</ul>
</div>
</div>
<% end%>

<%= form_for(@id, :url => {:action => "create"}, :html => {class: "horizontal", role: "form"}) do |f| %>
<div class= "form-group">
  <div class= "control-label">
    <%= f.label :"Registration Number(Enrollment number/SSN/Admin-ID)"%>
    </div>

    <%= f.text_field :registration_number, class: "form-control", placeholder: "Enter a valid registration number", autofocus: true %>
</div>

    <%= f.submit "Register" , class: "btn btn-primary"%>
<% end %>
</div>
