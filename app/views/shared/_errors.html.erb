<% if obj.errors.any?%>

    <div class= "alert alert-danger", role= "alert">
        <h2 class= "alert-heading">
          <%= pluralize(obj.errors.count, "error") %>
          prevented action from getting completed
          </h2>
<ul>
  <%obj.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
  <% end %>
</ul>
</div>
</div>
<% end%>